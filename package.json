{
  "name": "worktree-colors",
  "displayName": "Worktree Colors",
  "description": "Auto-assign colors to workspaces - git worktrees get related shades",
  "version": "0.4.0",
  "publisher": "shravans",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ShravanSunder/worktree-colors"
  },
  "homepage": "https://github.com/ShravanSunder/worktree-colors",
  "bugs": {
    "url": "https://github.com/ShravanSunder/worktree-colors/issues"
  },
  "keywords": [
    "peacock",
    "color",
    "workspace",
    "worktree",
    "git",
    "theme",
    "titlebar",
    "statusbar",
    "window"
  ],
  "galleryBanner": {
    "color": "#4a6b8a",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "worktreeColors.applyColor",
        "title": "Worktree Colors: Apply"
      },
      {
        "command": "worktreeColors.resetColor",
        "title": "Worktree Colors: Reset"
      },
      {
        "command": "worktreeColors.showInfo",
        "title": "Worktree Colors: Show Info"
      }
    ],
    "configuration": {
      "title": "Worktree Colors",
      "properties": {
        "worktreeColors.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Auto-apply colors on workspace open"
        },
        "worktreeColors.affectTitleBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color to title bar"
        },
        "worktreeColors.affectActivityBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color to activity bar"
        },
        "worktreeColors.affectStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Apply color to status bar"
        },
        "worktreeColors.saturation": {
          "type": "number",
          "default": 15,
          "minimum": 10,
          "maximum": 100,
          "description": "Color saturation (10-100)"
        },
        "worktreeColors.baseLightness": {
          "type": "number",
          "default": 20,
          "minimum": 15,
          "maximum": 60,
          "description": "Base lightness for first worktree (15-60)"
        },
        "worktreeColors.worktreeLightnessStep": {
          "type": "number",
          "default": 4,
          "minimum": 2,
          "maximum": 15,
          "description": "Lightness increase per worktree (2-15)"
        },
        "worktreeColors.detectionMode": {
          "type": "string",
          "enum": ["auto", "workspaceFileOnly", "firstWorkspaceFolder"],
          "default": "auto",
          "enumDescriptions": [
            "Check workspace file location first, fall back to first workspace folder (recommended)",
            "Only color if workspace file is inside a worktree",
            "Always use first workspace folder, ignore workspace file location"
          ],
          "description": "How to detect worktrees in multi-root workspaces"
        },
        "worktreeColors.respectExistingColors": {
          "type": "boolean",
          "default": true,
          "description": "Don't override existing color customizations (if user has set colors manually)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
